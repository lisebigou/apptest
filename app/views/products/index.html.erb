<div class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<a class="brand">Online products</a>
			<%= link_to "View cart", carts_path, :class => 'btn' %>
			<%= link_to 'Add Product', new_product_path, :class => 'btn' %>
		</div>
	</div>
</div>

<div class='container'>
	<table class='table table-bordered table-striped'>
	  <tr>
		<th>Name</th>
		<th>Description</th>
		<th>Price</th>
		<th></th>
		<th><%=t '.actions', :default => t("helpers.actions") %></th>
	  </tr>

	<% @products.each do |product| %>
	  <tr>
		<td><%= product.name %></td>
		<td><%= product.description %></td>
		<td><%= product.price %> â‚¬</td>
		<td>
			<%= link_to "Add to cart", addToCart_path(:name => product.name, :description => product.description, :price => product.price), :class=>'btn btn-mini btn-info' %>	
		</td>
			
		
		<td>								  
		  	<%= link_to t('.edit', :default => t("helpers.links.edit")),
								  edit_product_path(product), :class => 'btn btn-mini' %>

			<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
								  product_path(product),
								  :method => :delete,
								  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
								  :class => 'btn btn-mini' %>								 
		</td>
		
	  </tr>
	<% end %>
	</table>
</div>
